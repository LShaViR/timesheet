generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------
// ENUMS
// -----------------------
enum ApproveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum OrgRole {
  OWNER
  MEMBER
}

enum TeamRole {
  LEADER
  MEMBER
}

// -----------------------
// MODELS
// -----------------------
model Organization {
  id            String @id @default(cuid())
  provider      String
  providerOrgId String @map("provider_org_id")

  name        String
  description String?
  address     String?
  domain      String?
  industry    String?

  teams          Team[]
  project        Project[]
  orgMemberships OrgMembership[]
  users          User[]

  @@map("organizations")
}

model User {
  id             String @id @default(cuid())
  provider       String
  providerUserId String @map("provider_user_id")
  firstName      String @map("first_name")
  lastName       String @map("last_name")
  email          String @map("email")
  address        String

  teamMembership TeamMembership[]
  timesheets     Timesheet[]
  orgMemberships OrgMembership[]
  organization   Organization?    @relation(fields: [organizationId], references: [id])
  organizationId String?

  @@map("users")
}

model Team {
  id    String @id @default(cuid())
  name  String
  orgId String @map("org_id")

  org      Organization     @relation(fields: [orgId], references: [id])
  members  TeamMembership[]
  projects Project[]

  @@map("teams")
}

model Project {
  id         String @id @default(cuid())
  name       String
  department String

  teamId String? @map("team_id")
  orgId  String  @map("org_id")

  team       Team?        @relation(fields: [teamId], references: [id])
  org        Organization @relation(fields: [orgId], references: [id])
  timesheets Timesheet[]

  @@map("projects")
}

model Timesheet {
  id     String        @id @default(cuid())
  status ApproveStatus @default(PENDING)

  mondayDuration    Int? @map("monday_duration")
  tuesdayDuration   Int? @map("tuesday_duration")
  wednesdayDuration Int? @map("wednesday_duration")
  thursdayDuration  Int? @map("thursday_duration")
  fridayDuration    Int? @map("friday_duration")
  saturdayDuration  Int? @map("satarday_duration")
  sundayDuration    Int? @map("sunday_duration")

  projectId String @map("project_id")
  creatorId String @map("creator_id")

  project Project @relation(fields: [projectId], references: [id])
  creator User    @relation(fields: [creatorId], references: [id])

  @@map("timesheets")
}

model TeamMembership {
  id     String   @id @default(cuid())
  userId String   @map("user_id")
  teamId String   @map("team_id")
  role   TeamRole

  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  @@map("team_memberships")
}

model OrgMembership {
  id     String  @id @default(cuid())
  userId String  @map("user_id")
  orgId  String  @map("org_id")
  role   OrgRole

  user User         @relation(fields: [userId], references: [id])
  org  Organization @relation(fields: [orgId], references: [id])

  @@map("org_memberships")
}
